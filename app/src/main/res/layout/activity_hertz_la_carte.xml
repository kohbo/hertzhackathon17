<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hertz_la_carte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mudshark426.eaglevision.HertzLaCarte">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/hertzalacarte"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"/>

    <ImageButton
        android:id="@+id/boosterSeat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/boosterseat"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"/>

    <ImageButton
        android:id="@+id/siriusRadio"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/sirius"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/infantChildSeat"/>

    <ImageButton
        android:id="@+id/neverLost"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/childSeat"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginEnd="37dp"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/tablet"/>

    <ImageButton
        android:id="@+id/skiPackage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/childSeat"
        android:layout_toEndOf="@+id/checkLost"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ski"/>

    <ImageButton
        android:id="@+id/childSeat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/boosterSeat"
        android:layout_below="@+id/boosterSeat"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/childseat"/>

    <ImageButton
        android:id="@+id/infantChildSeat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/childSeat"
        android:layout_below="@+id/childSeat"
        android:layout_marginTop="38dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/infantchildseat"/>

    <ImageButton
        android:id="@+id/travelTablet"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/infantChildSeat"
        android:layout_alignStart="@+id/skiPackage"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/traveltab"/>

    <CheckBox
        android:text="CheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/checkBooster"
        android:layout_alignBottom="@+id/boosterSeat"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:text="CheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/childSeat"
        android:layout_alignParentStart="true"
        android:id="@+id/checkChildSeat"/>

    <CheckBox
        android:text="CheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/infantChildSeat"
        android:layout_alignParentStart="true"
        android:id="@+id/checkInfant"/>

    <CheckBox
        android:text="CheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/siriusRadio"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:id="@+id/checkSirius"/>

    <CheckBox
        android:text="CheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/childSeat"
        android:layout_toStartOf="@+id/neverLost"
        android:layout_marginEnd="11dp"
        android:id="@+id/checkLost"
        android:layout_alignTop="@+id/checkBooster"/>

    <CheckBox
        android:text="CheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/skiPackage"
        android:layout_alignEnd="@+id/checkLost"
        android:id="@+id/checkSki"/>

    <CheckBox
        android:text="CheckBox"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/travelTablet"
        android:layout_alignEnd="@+id/checkSki"
        android:id="@+id/checkTravelTab"/>

    <Button
        android:id="@+id/aLaCarte"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/travelTablet"
        android:layout_alignTop="@+id/checkSirius"
        android:text="Hertz La Carte"/>
</RelativeLayout>
